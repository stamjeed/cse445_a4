<!--
  Hotels.xml
  Directory of hotels in Tempe, AZ.
-->

<Hotels>
  
  <!--
    Example of a hotel with a Rating attribute.
    The hotel has two phone numbers (multiple Phone elements allowed).
  -->
  <Hotel Rating="4.2">
    <!-- Name of the hotel (required element) -->
    <Name>Westin</Name>
    <!-- Phone numbers (at least one required, multiple allowed) -->
    <Phone>480-968-8885</Phone>
    <Phone>800-937-8461</Phone>
    <!--
      Address element contains full address details.
      Required attribute: NearestAirport, the closest airport to the hotel.
    -->
    <Address NearestAirport="Sky Harbor">
      <Number>11</Number>           <!-- Street number (required) -->
      <Street>E 7th St</Street>     <!-- Street name (required) -->
      <City>Tempe</City>            <!-- City (required) -->
      <State>AZ</State>             <!-- State abbreviation (required) -->
      <Zip>85281</Zip>              <!-- Zip code (required) -->
    </Address>
  </Hotel>

